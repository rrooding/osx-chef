call janus#disable_plugin('tagbar')
call janus#disable_plugin('easymotion')
call janus#disable_plugin('nrrwrng')

set nocompatible

set encoding=utf-8
set gfn=Droid\ Sans\ Mono\ for\ Powerline:h10

if has("gui_running")
  set guioptions=ce
  let g:Powerline_symbols = 'fancy'
endif

set nobackup
set nowritebackup

au BufRead,BufNewFile *.hamlc set ft=haml
au FileType xml setlocal equalprg=xmllint\ --format\ --recover\ -\ 2>/dev/null

" Bubble single lines
nmap <C-A-k> [e
nmap <C-A-j> ]e

" Bubble multiple lines
vmap <C-A-k> [egv
vmap <C-A-j> ]egv
